%h1 Listing projects

- if @projects.any?
  %table.table.table-striped
    %tr
      %th Name
      %th Description
      %th
      %th
      %th

    - @projects.each do |project|
      %tr
        %td= link_to project.name, project_pages_path(project)
        %td= truncate project.description
        %td= link_to 'Edit', edit_project_path(project), class: 'btn'
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

  %br

= link_to 'New Project', new_project_path, class: 'btn btn-primary'

= form_for [@project, @page] do |f|
  - if @page.errors.any?
    .alert.alert-error
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :objects
    = f.text_area :objects
  .actions
    = f.submit 'Save', class: 'btn btn-primary'

#page_editor
